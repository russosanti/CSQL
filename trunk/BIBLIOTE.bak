char Salir()
{
char X;
printf("\nQuiere seguir ingresando libros?: \n S = Si       N = No \n");
do
  {
	scanf("%c",&X);
	fflush(stdin);
	clrbuf();
  }
while (X!='S' && X!='s' && X!='N' && X!='n');
clrscr();
return(X);
}

