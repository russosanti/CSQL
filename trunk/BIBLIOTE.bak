void mostrarlista(tlista *l)
{
index_lib dato;
if(!lvacia(l)){
	lppio(l);
	linfo(l,&dato);
	printf("%d  %d  %d\n",dato.clave,dato.sig,dato.ant);
	lsig(l);
	while(!lfin(l)){
		linfo(l,&dato);
		printf("%d  %d  %d\n",dato.clave,dato.sig,dato.ant);
		lsig(l);
	}
}
}


void Grabar(tlista *l_lib)
{
FILE *index;
index_lib dato;

if ((index = fopen("LIBROS_INDEX.TXT", "w")) == NULL)
{
	fprintf(stderr, "Cannot open output file.\n");
	//return 1;
}
fseek(index, SEEK_SET, 0);
if(!lvacia(l_lib)){
	lppio(l_lib);
	linfo(l_lib,&dato);
	printf("%d  %d  %d\n",dato.clave,dato.sig,dato.ant);
	fwrite(&dato, sizeof(dato), 1, index);
	lsig(l_lib);
	while(!lfin(l_lib)){
		linfo(l_lib,&dato);
		fwrite(&dato, sizeof(dato), 1, index);
		printf("%d  %d  %d\n",dato.clave,dato.sig,dato.ant);
		lsig(l_lib);
	}
}else{
	printf("OBSERVACION: EL INDICE NO HA SIDO CREADO");
}

fclose(index);
}

